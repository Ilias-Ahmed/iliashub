# EmailJS Configuration
# Copy this file to .env (or .env.local) and fill with your actual credentials
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here

# Performance optimizations
VITE_DISABLE_CONSOLE=true
VITE_ENABLE_COMPRESSION=true
VITE_LAZY_LOAD_IMAGES=true
VITE_REDUCE_ANIMATIONS=false

# Deployment note:
# The VITE_EMAILJS_* values must also be provided as GitHub Secrets
# so that builds running in CI can access them.
